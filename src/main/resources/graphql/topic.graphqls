enum TopicType {
    TOPIC_PAI
    TOPIC_FILHO
}

type Topic {
    id: ID!,
    nome: String!,
    descTopic: String!,
    topicoPai: Topic,
    filhos: [Topic!],
    tipo: TopicType
    livros: [Livro!]
}

input CreateTopic {
    nome: String!
    descTopic: String!
    topicpai: ID
    filhos: [CreateTopic!]
    livros: [CreateLivro!]
}

