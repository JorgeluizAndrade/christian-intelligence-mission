enum TopicType {
    TOPIC_PAI
    TOPIC_FILHO
}

type Topic {
    id: ID!
    autor: String!
    nome: String!
    descTopic: String!
    topicoPai: Topic
    filhos: [Topic!]
    tipo: TopicType
    conteudos: [Conteudo!]!
}

input CreateTopic {
    autor: String!
    nome: String!
    descTopic: String!
    topicpai: ID
    filhos: [CreateTopic!]
    conteudos: [CreateConteudo!]
}

